<!-- views/register.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - Choose Your Role</title>
    <link href="/css/style.css" rel="stylesheet">
</head>
<body class="bg-gray-900 text-white">
    <!-- Include the header partial -->
    <%- include('partials/header') %>

    <main class="min-h-screen flex items-center justify-center bg-gray-900">
        <div class="max-w-screen-xl mx-auto bg-gray-800 shadow-lg rounded-lg p-6 lg:flex lg:justify-center lg:items-center">
            <!-- Left Section (Form) -->
            <div class="lg:w-1/2 xl:w-5/12 p-6 sm:p-12">
                <div class="text-center">
                </div>
                <h1 class="text-3xl font-extrabold text-center text-gray-100">Sign Up</h1>

                <div class="mt-8">

                    <div class="my-8 border-b text-center">
                        <span class="px-2 text-sm text-gray-400">Or sign up with email</span>
                    </div>

                    <!-- Role Selection -->
                    <div class="flex justify-center gap-4 mb-6">
                        <button id="studentBtn" class="w-1/2 py-2 bg-indigo-500 text-white font-semibold rounded-lg hover:bg-indigo-700 transition-all">
                            I'm a Student
                        </button>
                        <button id="tutorBtn" class="w-1/2 py-2 bg-green-500 text-white font-semibold rounded-lg hover:bg-green-700 transition-all">
                            I'm a Tutor
                        </button>
                    </div>

                    <!-- Form -->
                    <form id="registrationForm" class="hidden">
                        <!-- Common Fields -->
                        <div class="space-y-4">
                            <div>
                                <label for="username" class="block text-sm font-medium">Username</label>
                                <input type="text" id="username" name="username" class="w-full px-4 py-2 bg-gray-700 text-white border border-gray-600 rounded-lg focus:outline-none focus:border-indigo-500" required>
                            </div>

                            <div>
                                <label for="email" class="block text-sm font-medium">Email</label>
                                <input type="email" id="email" name="email" class="w-full px-4 py-2 bg-gray-700 text-white border border-gray-600 rounded-lg focus:outline-none focus:border-indigo-500" required>
                            </div>

                            <div>
                                <label for="password" class="block text-sm font-medium">Password</label>
                                <input type="password" id="password" name="password" class="w-full px-4 py-2 bg-gray-700 text-white border border-gray-600 rounded-lg focus:outline-none focus:border-indigo-500" required>
                            </div>

                            <button type="submit" class="w-full py-3 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 transition-all">
                                Register
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Right Section (Illustration) -->
            <div class="hidden lg:block lg:w-1/2">
                <img src="https://storage.googleapis.com/devitary-image-host.appspot.com/15848031292911696601-undraw_designer_life_w96d.svg"
                    alt="Illustration" class="w-full h-auto object-cover" />
            </div>
        </div>
    </main>

    <!-- Include the footer partial -->
    <%- include('partials/footer') %>

    <script src="/js/register.js"></script>
</body>
</html>
