<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GatorTutor - <%= tutor.username %>'s Profile</title>
    <link rel="stylesheet" href="/css/tailwind.css" />
    <link rel="stylesheet" href="/css/custom.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/flowbite/dist/flowbite.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<body class="bg-gray-100">
    <%- include('partials/header') %>
    
    <main class="pt-[calc(6rem+5rem)] container mx-auto max-w-[800px]">
        <section class="p-8 bg-white rounded-lg shadow-xl">
            <div class="mb-6">
                <a href="/tutors" class="text-blue-500 hover:underline">
                    <i class="mr-2 fas fa-arrow-left"></i>Back to Tutors
                </a>
            </div>
            
            <div class="flex flex-col items-start mb-6 md:flex-row">
                <div class="w-full mb-4 mr-6 md:w-1/2 md:mb-0">
                    <div class="relative overflow-hidden rounded-lg shadow-lg aspect-video">
                        <div id="media-slideshow" class="carousel">
                            <div class="carousel-item">
                                <img src="<%= tutor.profile_photo || 'https://via.placeholder.com/640x360' %>" alt="<%= tutor.username %>" class="object-cover w-full h-full">
                            </div>
                            <% if (tutor.profile_video) { %>
                            <div class="hidden carousel-item">
                                <video src="<%= tutor.profile_video %>" controls class="object-cover w-full h-full">
                                    Your browser does not support the video tag.
                                </video>
                            </div>
                            <% } %>
                        </div>
                        <% if (tutor.profile_video) { %>
                        <div class="absolute flex space-x-2 bottom-4 right-4">
                            <button id="prev-btn" class="p-2 text-gray-800 bg-white bg-opacity-50 rounded-full hover:bg-opacity-75">
                                <i class="fas fa-chevron-left"></i>
                            </button>
                            <button id="next-btn" class="p-2 text-gray-800 bg-white bg-opacity-50 rounded-full hover:bg-opacity-75">
                                <i class="fas fa-chevron-right"></i>
                            </button>
                        </div>
                        <% } %>
                    </div>
                </div>
                <div class="w-full md:w-1/2">
                    <h1 class="mb-2 text-3xl font-bold"><%= tutor.username %></h1>
                    <p class="text-gray-600"><%= tutor.email %></p>
                </div>
            </div>
            
            <div class="mb-6">
                <h2 class="mb-2 text-2xl font-semibold">About Me</h2>
                <p class="text-gray-700"><%= tutor.bio %></p>
            </div>
            
            <div class="mb-6">
                <h2 class="mb-2 text-2xl font-semibold">Subjects</h2>
                <div class="flex flex-wrap">
                    <% tutor.subjects.split(',').forEach(subject => { %>
                        <span class="bg-blue-100 text-blue-800 text-sm font-medium mr-2 mb-2 px-2.5 py-0.5 rounded"><%= subject.trim() %></span>
                    <% }) %>
                </div>
            </div>
            
            <div class="mb-6">
                <h2 class="mb-2 text-2xl font-semibold">Hourly Rate</h2>
                <p class="text-2xl font-bold text-green-600">$<%= tutor.hourly_rate %>/hour</p>
            </div>
            
            <div>
                <h2 class="mb-2 text-2xl font-semibold">Availability</h2>
                <p class="text-gray-700"><%= tutor.availability %></p>
            </div>
            
            <div class="mt-8">
                <h3 class="mb-4 text-xl font-semibold">Contact Tutor</h3>
                <% if (user && user.id !== tutor.id) { %>
                    <form id="messageForm" class="space-y-4">
                        <input type="hidden" name="recipientId" value="<%= tutor.id %>">
                        <div>
                            <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
                            <textarea id="message" name="message" rows="4" class="block w-full mt-1 border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" required></textarea>
                        </div>
                        <button type="submit" class="px-4 py-2 text-white bg-indigo-600 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                            Send Message
                        </button>
                    </form>
                <% } else if (!user) { %>
                    <p>Please <a href="/login" class="text-indigo-600 hover:text-indigo-800">log in</a> to contact this tutor.</p>
                <% } else { %>
                    <p>This is your profile. You cannot send a message to yourself.</p>
                <% } %>
            </div>

            <script>
            document.getElementById('messageForm')?.addEventListener('submit', async (e) => {
                e.preventDefault();
                const form = e.target;
                const formData = new FormData(form);

                try {
                    const response = await fetch('/messages/send', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(Object.fromEntries(formData)),
                    });

                    if (response.ok) {
                        alert('Message sent successfully!');
                        form.reset();
                    } else {
                        const error = await response.json();
                        alert(`Error: ${error.message}`);
                    }
                } catch (error) {
                    console.error('Error sending message:', error);
                    alert('An error occurred while sending the message. Please try again.');
                }
            });
            </script>
        </section>
    </main>
    
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const slideshow = document.getElementById('media-slideshow');
        const items = slideshow.querySelectorAll('.carousel-item');
        const prevBtn = document.getElementById('prev-btn');
        const nextBtn = document.getElementById('next-btn');
        let currentIndex = 0;

        function showItem(index) {
            items.forEach((item, i) => {
                item.classList.toggle('hidden', i !== index);
            });
        }

        function nextItem() {
            currentIndex = (currentIndex + 1) % items.length;
            showItem(currentIndex);
        }

        function prevItem() {
            currentIndex = (currentIndex - 1 + items.length) % items.length;
            showItem(currentIndex);
        }

        if (prevBtn && nextBtn) {
            prevBtn.addEventListener('click', prevItem);
            nextBtn.addEventListener('click', nextItem);
        }
    });
    </script>

    <%- include('partials/scripts') %>
</body>
</html>