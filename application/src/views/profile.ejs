<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>User Profile</title>
        <link rel="stylesheet" href="/css/tailwind.css">
        <script src="https://cdn.tailwindcss.com"></script>
        <script src="https://unpkg.com/flowbite/dist/flowbite.js"></script>
    </head>
    <body class="bg-gray-100">
    <%- include('partials/header') %>

    <main class="container flex justify-center p-4 mx-auto mt-20">
        <div class="flex flex-col w-full max-w-6xl gap-8 md:flex-row">
            <!-- Profile Information -->
            <div class="w-full md:w-1/4">
                <div class="overflow-hidden bg-white rounded-lg shadow-xl">
                    <% if (user.role === 'tutor' && tutorPost) { %>
                        <!-- Tutor Profile -->
                        <div class="relative">
                            <img src="<%= tutorPost.profile_photo || '/images/blank-pfp.png' %>" alt="Profile Photo" class="object-cover w-full h-48">
                        </div>
                        <div class="p-4">
                            <h3 class="mb-2 text-2xl font-semibold text-gray-800"><%= user.username %></h3>
                            <p class="mb-4 text-gray-600"><%= user.email %></p>
                            <div class="mb-4">
                                <p class="mb-2"><strong>Bio:</strong> <%= tutorPost.bio %></p>
                                <p class="mb-2"><strong>Hourly Rate:</strong> $<%= tutorPost.hourly_rate %>/hr</p>
                            </div>
                            <div class="mb-4">
                                <h4 class="mb-2 font-semibold">Subjects:</h4>
                                <div class="flex flex-wrap gap-2">
                                    <% tutorPost.subjects.split(',').forEach(subject => { %>
                                        <span class="px-2 py-1 text-xs text-blue-800 bg-blue-100 rounded-full"><%= subject.trim() %></span>
                                    <% }) %>
                                </div>
                            </div>
                            <p class="mb-4"><strong>Experience:</strong> <%= tutorPost.experience %></p>
                            <p class="mb-4"><strong>Contact:</strong> <%= tutorPost.contact_info %></p>
                            <div class="mb-4">
                                <h4 class="mb-2 font-semibold">Availability:</h4>
                                <ul class="pl-5 list-disc">
                                    <% if (Array.isArray(tutorPost.availability)) { %>
                                        <% tutorPost.availability.forEach(slot => { %>
                                            <li><%= slot.day %> <%= slot.start_time %>-<%= slot.end_time %> (<%= slot.location %>)</li>
                                        <% }) %>
                                    <% } else { %>
                                        <li>No availability information</li>
                                    <% } %>
                                </ul>
                            </div>
                            <a href="/edit-tutor-profile" class="block w-full px-4 py-2 font-semibold text-center text-white transition duration-300 bg-green-500 rounded-md hover:bg-green-600">Edit Tutor Profile</a>
                        </div>
                    <% } else if (user.role === 'tutor') { %>
                        <!-- Tutor without profile -->
                        <div class="p-4">
                            <h3 class="mb-2 text-2xl font-semibold text-gray-800"><%= user.username %></h3>
                            <p class="mb-4 text-gray-600"><%= user.email %></p>
                            <p class="mb-4">You haven't created a tutor profile yet.</p>
                            <a href="/become-a-tutor" class="block w-full px-4 py-2 font-semibold text-center text-white transition duration-300 bg-green-500 rounded-md hover:bg-green-600">Become a Tutor</a>
                        </div>
                    <% } else { %>
                        <!-- Student Profile -->
                        <div class="p-4">
                            <h3 class="mb-2 text-2xl font-semibold text-gray-800"><%= user.username %></h3>
                            <p class="mb-4 text-gray-600"><%= user.email %></p>
                        </div>
                    <% } %>
                </div>
                
                <!-- Change Password Button -->
                <button id="changePasswordBtn" class="w-full px-4 py-2 mt-4 font-semibold text-white transition duration-300 bg-blue-500 rounded-md hover:bg-blue-600">Change Password</button>
            </div>

            <!-- Messages Section -->
            <div class="w-full p-6 bg-white rounded-lg shadow-md md:w-2/3">
                <h2 class="mb-4 text-2xl font-bold">Your Conversations</h2>
                
                <% if (Object.keys(conversations).length === 0) { %>
                    <p class="text-gray-600">You have no messages.</p>
                <% } else { %>
                    <div class="space-y-8">
                        <% Object.entries(conversations).forEach(([otherUserId, conversation]) => { %>
                            <div class="p-4 bg-gray-100 rounded-lg">
                                <h3 class="mb-4 text-xl font-semibold text-blue-600">Conversation with <%= conversation.name %></h3>
                                <div class="mb-4 space-y-4" id="conversation-<%= otherUserId %>">
                                    <% conversation.messages.forEach(message => { %>
                                        <div class="p-2 <%= message.sender_id === currentUserId ? 'bg-blue-100 ml-auto' : 'bg-gray-200' %> rounded-lg max-w-[80%]">
                                            <p class="text-gray-700"><%= message.message %></p>
                                            <span class="text-xs text-gray-500"><%= new Date(message.created_at).toLocaleString() %></span>
                                        </div>
                                    <% }) %>
                                </div>
                                <!-- Add message form -->
                                <form class="mt-4 send-message-form" data-recipient-id="<%= otherUserId %>">
                                    <div class="flex">
                                        <input type="text" name="message" class="flex-grow px-3 py-2 border rounded-l" placeholder="Type your message..." required>
                                        <button type="submit" class="px-4 py-2 text-white bg-blue-500 rounded-r hover:bg-blue-600">Send</button>
                                    </div>
                                </form>
                            </div>
                        <% }) %>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <%- include('partials/footer') %>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const forms = document.querySelectorAll('.send-message-form');
            forms.forEach(form => {
                form.addEventListener('submit', async (e) => {
                    e.preventDefault();
                    const recipientId = form.dataset.recipientId;
                    const messageInput = form.querySelector('input[name="message"]');
                    const message = messageInput.value;

                    try {
                        const response = await fetch('/messages/send', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({ recipientId, message }),
                        });

                        if (!response.ok) {
                            throw new Error(`HTTP error! status: ${response.status}`);
                        }

                        console.log('Message sent successfully');
                        
                        // Clear the input field
                        messageInput.value = '';

                        // Update the UI with the new message
                        const conversationDiv = document.getElementById(`conversation-${recipientId}`);
                        const newMessageDiv = document.createElement('div');
                        newMessageDiv.className = 'p-2 bg-blue-100 ml-auto rounded-lg max-w-[80%]';
                        newMessageDiv.innerHTML = `
                            <p class="text-gray-700">${message}</p>
                            <span class="text-xs text-gray-500">${new Date().toLocaleString()}</span>
                        `;
                        conversationDiv.appendChild(newMessageDiv);

                        // Scroll to the bottom of the conversation
                        conversationDiv.scrollTop = conversationDiv.scrollHeight;
                    } catch (error) {
                        console.error('Error sending message:', error);
                        alert('Failed to send message. Please try again.');
                    }
                });
            });
        });
    </script>
</body>
</html>