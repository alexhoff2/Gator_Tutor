<!-- views/team/member.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GatorTutor - <%= member.name %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/tailwind.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/flowbite/dist/flowbite.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@2.8.2/dist/alpine.min.js" defer></script>
</head>

<body class="bg-gray-100">

    <main class="pt-16">
        <section class="py-20 bg-white">
            <div class="container mx-auto px-6">
                <div class="flex flex-col md:flex-row items-center space-x-6">
                    <img src="<%= member.img %>" alt="<%= member.name %>" class="w-48 h-48 rounded-full object-cover mb-6 md:mb-0">
                    <div>
                        <h1 class="text-4xl font-bold mb-2"><%= member.name %></h1>
                        <p class="text-xl font-medium text-gray-600 mb-4"><%= member.title %></p>
                        <p class="text-gray-700"><%= member.bio %></p>
                    </div>
                </div>
            </div>
        </section>
    </main>

</body>

</html>
