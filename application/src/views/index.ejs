<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GatorTutor</title>
    <link rel="stylesheet" href="/css/tailwind.css" />
    <link rel="stylesheet" href="/css/custom.css" />
    <!-- Include custom CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/flowbite/dist/flowbite.js"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/alpinejs@2.8.2/dist/alpine.min.js"
      defer
    ></script>
  </head>

  <body class="bg-gray-100">
    <%- include('partials/header') %>
    <main class="pt-16">
      <!-- Impact Section -->
      <section
        id="impact"
        class="relative flex items-center min-h-screen overflow-hidden text-white gradient-bg"
      >
        <div class="container relative z-10 px-6 py-20 mx-auto text-center">
          <h1 class="mb-4 text-4xl font-bold md:text-6xl">
            Welcome to GatorTutor
          </h1>
          <p class="mb-8 text-xl md:text-2xl">
            Making a positive impact through personalized tutoring.
          </p>
          <div
            id="typing-text"
            class="h-8 mb-8 overflow-hidden text-lg md:text-xl"
          >
            Empowering Students | Expert Tutors | Academic Excellence
          </div>
          <a
            href="#sign-in"
            class="px-8 py-3 text-lg font-semibold text-white transition duration-300 rounded-full btn-primary hover:bg-indigo-700"
            >Sign In</a
          >
        </div>
      </section>

      <%- include('partials/footer') %>
    </main>

    <%- include('partials/scripts') %>
  </body>
</html>
